<table>
  <tr>
    <th>№</th>
    <% if show_photo %>
      <th>Фото</th>
    <% end %>
    <th><%= link_to_sort 'Название места', :sort => 'description' %></th>
    <th><%= link_to_sort 'Адрес', :sort => 'address' %></th>
    <th><%= link_to_sort 'Рейтинг', :sort => 'rating' %></th>
    <th><%= link_to_sort 'Комментарий', :sort => 'comment' %></th>
  </tr>

  <% i = 1 %>
<% features.each do |feature| %>
  <% next unless feature.approved? %>
  <tr>
    <td><%= i %></td>
    <% if show_photo %>
      <td><%= link_to image_tag(feature.photo.url(:thumb)), feature.photo.url(:large), :rel => "lightbox", :title => feature.description  unless feature.photo_file_name.nil? %></td>
    <% end %>
    <td><%= link_to feature.description, map_url + "?feature=#{feature.id}" %></td>
    <td><%= link_to feature.address, map_url + "?feature=#{feature.id}" unless feature.address.blank? %></td>
    <td><%= feature.rating %></td>
    <td><%= feature.comment %></td>
  </tr>
  <% i += 1 %>
<% end %>
</table>

<br />

