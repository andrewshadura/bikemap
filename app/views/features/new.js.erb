feature = theCustomMap._selectedFeature;

feature.bindPopup("<%= escape_javascript(render :file => 'features/new', :layout => 'layouts/feature-popup', :formats => [:html])%>");
feature.closePopup();
feature.openPopup();

$('input.cancel').click(function(e) {
  feature.closePopup();
  theCustomMap.removeLayer(feature);
  return false;
});

$('#feature-popup-like').click(function(e) {
  theCustomMap.toggleLike(feature);
});

$('a[rel*="lightbox"]').lightBox();

$('input[name="feature[existing]"]').click(function(e) {
  $('.field#photo').toggle($('#feature_existing_true')[0].checked);
});
