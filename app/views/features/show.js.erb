feature = theCustomMap._selectedFeature;

feature.bindPopup("<%= escape_javascript(render :file => 'features/show', :layout => 'layouts/feature-popup', :formats => [:html])%>");
feature.closePopup();
feature.openPopup();

$('#feature-popup-like').click(function(e) {
  theCustomMap.toggleLike(feature, "<%= 'like' -%>");
});

$('#feature-popup-dislike').click(function(e) {
  theCustomMap.toggleLike(feature, "<%= 'dislike' -%>");
});

$('#edit-link').click(function(e) {
  $.ajax({
    url: '/features/' + feature.properties.id + '/edit',
    type: 'GET',
    dataType: 'script',
  });
});

$('a[rel*="lightbox"]').lightBox();

