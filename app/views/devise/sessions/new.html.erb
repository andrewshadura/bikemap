<div id="login_box">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <fieldset>
    <legend>Вход на сайт</legend>
      <div><%= f.label :login %><br />
        <%= f.text_field :login %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Войти" %></div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<div id="login_alternatives">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= image_tag "button-#{provider.to_s}.png", :class => 'user-icon' %>
      <%= link_to "Войти через #{omniauth_provider_name(provider)}", omniauth_authorize_path(resource_name, provider), :class => 'popup', :data => { :width => 640, :height => 480 } %><br />
    <% end -%>
  <% end -%>
</div>
