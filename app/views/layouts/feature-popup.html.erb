<div id="feature-popup-header">
  <img src="/assets/marker-icon.png"/>
  <span id="feature-popup-like" class="feature-rating">Like</span>
  <span id="feature-popup-rating" class="feature-rating"><%= @feature.rating -%></span>
  <span id="feature-popup-dislike" class="feature-rating">Dislike</span>
</div>
<div id="feature-popup-contents">

  <% unless notice.nil? %>
    <p class="notice"><%= notice %></p>
  <% end -%>

  <% unless alert.nil? %>
    <p class="alert"><%= alert %></p>
  <% end -%>

  <%= yield %>
</div>
