<div id="feature-popup-header">
  <% unless @title.nil? %>
    <h3><%= @title %></h3>
  <% end %>
  <% unless @hide_like %>
    <div id="like_widget">
      <%= render 'like_widget' %>
    </div>
  <% end %>
</div>
<div id="feature-popup-contents">

  <% unless notice.nil? %>
    <p class="notice"><%= notice %></p>
  <% end -%>

  <% unless alert.nil? %>
    <p class="alert"><%= alert %></p>
  <% end -%>

  <%= yield %>
</div>
